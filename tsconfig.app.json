{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.vue", "**/*.d.ts", "node_modules/vite-plugin-pwa/client.d.ts"],
  "exclude": ["src/**/__tests__/*", "src/libs/**/*"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["naive-ui/volar", "@intlify/unplugin-vue-i18n/messages", "unplugin-icons/types/vue"],
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": true
  }
}
